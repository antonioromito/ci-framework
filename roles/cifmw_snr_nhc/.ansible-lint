---
# .ansible-lint

# Exclude paths
exclude_paths:
  - .molecule/
  - .pytest_cache/
  - __pycache__/
  - molecule/default/requirements.yml

# Enable offline mode
offline: false

# Use modern syntax
use_default_rules: true

# Skip specific rules
skip_list:
  - yaml[line-length]  # Allow longer lines in some cases
  - name[missing]      # Allow tasks without names in some cases
  - fqcn[action-core]  # Allow using short names for core modules

# Warn on specific rules instead of failing
warn_list:
  - experimental      # Allow experimental features
  - ignore-errors     # Allow ignore_errors in some cases

# Enable additional rules
enable_list:
  - no-log-passwords  # Ensure passwords are not logged
  - no-jinja-when     # Avoid Jinja2 in when conditions 